generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  username String
  email    String @unique
  password String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  post      Post[]
  comment   Comment[]
  Profile   Profile?

  @@map("users")
}

model Post {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  image       String? @default("null")
  userId      Int
  user        User    @relation(fields: [userId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comment   Comment[]

  @@map("posts")
}

model Comment {
  id Int @id @default(autoincrement())

  username String
  comment  String

  postId Int
  post   Post @relation(fields: [postId], references: [id])
  userId Int
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("comments")
}

model Profile {
  id Int @id @default(autoincrement())

  image       String? @default("null")
  description String?

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profile")
}
